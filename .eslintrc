{
  "extends": "eslint",
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "no-unused-vars": [
      2,
      {
        "args": "none",
        "argsIgnorePattern": "React"
      }
    ],
    "no-mixed-spaces-and-tabs": [
      0,
      "smart-tabs"
    ],
    "react/jsx-uses-vars": 2,
    "func-style": [
      0,
      "declaration"
    ],
    "new-cap": [
      0
    ],
    "quotes": [
      2,
      "single",
      "avoid-escape"
    ]
  }
}
